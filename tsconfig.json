{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "noEmit": false,
      "target": "esnext",
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
  }